<assembly>
    <id>javacalc-install</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <lineEnding>unix</lineEnding>
            <directory>src/main/resources/javacalc-install</directory>
            <outputDirectory>vanadis-felix</outputDirectory>
        </fileSet>
    </fileSets>
    <binaries>
        <dependencySets>
            <dependencySet>
                <useTransitiveDependencies>false</useTransitiveDependencies>
                <unpack>true</unpack>
                <includes>
                    <include>net.sf.vanadis.install:net.sf.vanadis.install</include>
                </includes>
                <unpackOptions>
                    <excludes>
                        <exclude>vanadis-felix/deploy/bundle/net.sf.vanadis.modules.ris.rmi*</exclude>
                        <exclude>vanadis-felix/deploy/bundle/net.sf.vanadis.rmiprovider*</exclude>
                        <exclude>vanadis-felix/deploy/launch/distributor.xml</exclude>
                    </excludes>
                </unpackOptions>
            </dependencySet>
            <dependencySet>
                <useTransitiveDependencies>false</useTransitiveDependencies>
                <outputDirectory>
                    vanadis-felix/deploy/bundle
                </outputDirectory>
                <includes>
                    <include>net.sf.vanadis.modules.examples.javacalc.*</include>
                </includes>
                <excludes>
                    <exclude>net.sf.vanadis.modules.examples.javacalc.install*</exclude>
                </excludes>
            </dependencySet>
        </dependencySets>
    </binaries>
</assembly>